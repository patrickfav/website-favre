{
  "name": "@patrickfav/hugo-content-downloader",
  "version": "1.0.0",
  "description": "A Script that prepares your github readmes and medium posts for Hugo",
  "main": "dist/index.js",
  "bin": {
    "hugo-content-downloader": "./dist/index.js"
  },
  "engines" : {
    "npm" : ">=8.0.0 <10.0.0",
    "node" : ">=18.12.0 <19.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "exec": "npm run build && hugo-content-downloader",
    "package": "npm i && npm run build && npm link",
    "package:ci": "npm ci && npm run build && npm link",
    "build": "npx tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:ts": "eslint src/**/*.ts -f json -o eslint_report.json",
    "lint": "npm run lint:ts"
  },
  "keywords": [
    "cli",
    "cg-dl"
  ],
  "author": "Patrick Favre-Bulle",
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickfav/website-favre.git"
  },
  "dependencies": {
    "base32-encoding": "^1.0.0",
    "cheerio": "1.0.0-rc.12",
    "esm": "^3.2.25",
    "got": "^11.8.6",
    "request": "^2.88.2",
    "rss-parser": "3.12.0",
    "scramjet": "^4.29.0",
    "turndown": "v7.1.1",
    "turndown-plugin-gfm": "^1.0.2",
    "typescript": "^5.0.2",
    "words-count": "^2.0.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/esm": "^3.2.0",
    "@types/got": "^9.6.12",
    "@types/request": "^2.48.8",
    "@types/turndown": "^5.0.1",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "sonarqube-scanner": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
